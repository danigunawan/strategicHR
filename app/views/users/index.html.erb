

<% if can? :manage, User %>
  <h2 class="title-divider"><span>All <span class="de-em">Users</span></span> <small></small></h2>
  <div class="table-responsive">
    <table class="table table-striped table-bordered table-condensed">
      <thead>
        <tr>
          <th>User Name</th>
          <th>Email</th>
          <th>Member Since</th>
        </tr>
      </thead>

      <tbody>
        <% @users.each do |user| %>
          <tr>
            <td><%= link_to user.name, user_path(user)  %></td>
            <td><%= user.email %></td>
            <td><%= user.created_at %></td>
         </tr>
        <% end %>
      </tbody>
    </table>
  </div>
<% else %>
  <p>This page is not available.</p>
<% end %>



