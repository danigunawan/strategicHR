<h1>Strategic HR Training Courses</h1>

<div class="span8">
  <% if can? :create, Course %>
    <%= link_to "Create Course", new_course_path, class: 'btn btn-primary btn-mini' %>
  <% end %>
</div>
<br><br>
<div class="span8">
  <% @courses.each do |course| %>
    <div class="media">
      <div class="media-body">
        <h4 class="media-heading">
          <%= link_to course.name, course_path(course) %> - <%= pluralize(course.sections.size, "Section") %>
        </h4>        
      </div>
    </div>
  <% end %>
</div>

