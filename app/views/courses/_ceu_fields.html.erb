<fieldset>
  <%= f.label :organization, "Certifying Organization:" %><br/>
  <%= f.text_field :organization, size: 40, required: true, autofocus: true %><br/>
  <%= f.label :name, "Name:" %><br/>
  <%= f.text_field :name, size: 40, placeholder: "name of credit, e.g. Strategic Human Resources", required: true %><br/>
  <%= f.label :code, "CEU Code:" %><br/>
  <%= f.text_field :code, size: 40, placeholder: "course code from certifying organization", required: true %><br/>
  <%= f.label :credit, "#Credits:" %><br/>
  <%= f.text_field :credit, size: 40, as: :float, placeholder: "# of CEU credits", required: true %><br/>
  <%= f.check_box :_destroy %>
  <%= f.label :_destroy, "Remove CEU" %>

</fieldset>
<br>