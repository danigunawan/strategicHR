<%# add navigation links to this file %>
<%= link_to 'StrategicHR', root_path, class: 'navbar-brand' %>
<%= link_to "Courses", courses_path, class: 'menu-item', role: 'menuitem' %>
<% if can? :update, User %>
  <%= link_to "Users", users_path, class: 'menu-item', role: 'menuitem'  %>
<% end %>
<% if can? :update, Video %>
  <%= link_to "Videos", videos_path, class: 'menu-item', role: 'menuitem'  %>
<% end %>
<% if can? :update, Quiz %>
  <%= link_to "Quizzes", quizzes_path, class: 'menu-item', role: 'menuitem' %>
<% end %>
<%= link_to "About", welcome_about_path, class: 'menu-item', role: 'menuitem' %>
<%= link_to "Contact", contact_path, class: 'menu-item', role: 'menuitem'  %>
<% if current_user %>
  <div class="btn-group user-menu pull-right"> 
    <%= link_to "Logout", logout_path, method: :delete, class: 'btn btn-primary', role: 'menuitem'  %>
  </div>
<% else %>
  <div class="btn-group user-menu pull-right"> 
    <%= link_to "Login", login_path, class: 'btn btn-primary'  %>
    <%= link_to "Sign Up", new_user_path, class: 'btn btn-primary'  %>
  </div>
<% end %>
