

<%# navigation styled for Twitter Bootstrap 3.0 %>
<nav class="navbar navbar-inverse">
  <div class="container">
    <div class="navbar-header">
      <button type="button" class="navbar-toggle" data-toggle="collapse" data-target=".navbar-collapse">
        <span class="sr-only">Toggle navigation</span>
        <span class="icon-bar"></span>
        <span class="icon-bar"></span>
        <span class="icon-bar"></span>
      </button>

      <%= link_to 'StrategicHR', root_path, class: 'navbar-brand' %>
      <%= link_to "Courses", courses_path, class: 'navbar-brand' %>
      <% if can? :update, User %>
        <%= link_to "Users", users_path, class: 'navbar-brand'  %>
      <% end %>
      <% if can? :update, Video %>
        <%= link_to "Videos", videos_path, class: 'navbar-brand'  %>
      <% end %>
      <% if can? :update, Quiz %>
        <%= link_to "Quizzes", quizzes_path, class: 'navbar-brand'  %>
      <% end %>
      <%= link_to "About", welcome_about_path, class: 'navbar-brand' %>
      <%= link_to "Contact", contact_path, class: 'navbar-brand'  %>
      <% if current_user %>
        <div class="btn-group user-menu pull-right"> 
          <%= link_to "Sign-out", logout_path, method: :delete, class: 'btn btn-primary'  %>
        </div>
      <% else %>
        <div class="btn-group user-menu pull-right"> 
          <%= link_to "Sign-in", login_path, class: 'btn btn-primary'  %>
          <%= link_to "Register", new_user_path, class: 'btn btn-primary'  %>
        </div>
      <% end %>

    </div>
    <div class="collapse navbar-collapse">
      <ul class="nav navbar-nav">
        <%= render 'layouts/navigation_links' %>
      </ul>
    </div>
  </div>
</nav>
