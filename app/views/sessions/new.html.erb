<h2 class="title-divider"><span>Please <span class="de-em">Login</span></span> <small></small></h2>
<div class="row">
  <div class="col-md-6">
    <%= form_tag sessions_create_path, class: 'form-login form-wrapper form-narrow', :method => :get do %>
      <fieldset id="login">
        <div class="form-group">
          <%= label_tag :email, 'Email:', size: 40, class: 'sr-only', for: 'login-email-page' %>
          <div class="controls">
            <%= text_field_tag :email, params[:email], size: 40, id: 'login-email-page', class: 'form-control email',  placeholder: "email address", required: true %>
          </div>
        </div>
        <div class="form-group">
          <%= label_tag :password, 'Password:', size: 40, class: 'sr-only', for: 'login-password-page' %>
          <div class="controls">
            <%= password_field_tag :password, params[:password], size: 40, id: 'login-password-page', class: 'form-control password', placeholder: "password", required: true  %>
          </div>
        </div>
        <br>

        <div>
          <%= submit_tag "Login", class: 'btn btn-primary btn-large'  %>
        </div>
        <br>
        <p><%= link_to "I forgot my password", new_password_reset_path %></p>
      </fieldset>
    <% end %>

  </div>
</div>