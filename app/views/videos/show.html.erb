<h2 class="title-divider"><span><%= @video.name %> <span class="de-em">Video</span></span> <small></small></h2>

<%= link_to "Go to Course", course_path(@video.course), class: 'btn btn-primary btn-mini' unless @video.course.nil? %>
<% if can? :update, @video %>
  <%= link_to "Edit Video", edit_video_path, class: 'btn btn-primary btn-mini' %>
<% end %>
<% if can? :destroy, @video %>
  <%= link_to "Delete Video", @video, method: :delete, class: 'btn btn-primary btn-mini btn-danger', data: { confirm: 'Are you sure you want to delete this video?' } %> 
<% end %>
<% if can? :create, @video %>
  <%= link_to "Add Video", new_video_path, class: 'btn btn-primary btn-mini' %> 
   <p><%= markdown @video.description %></p>
<% end %>    

  <br>
  <% if can? :view, @video %>
    <%= render 'vimeo' %>
  <% else %>
    <p>Please sign-up for StrategicHR to watch Dr. Bob Nelson's videos.</p>
  <% end %>




